<div class="container">
	<h1>Transactions page</h1>
	<p>Your token: <span id="token"><%=token%></span></p>
	<form action="#" method="POST" class="form-horizontal" id="transaction-form" role="form">
		<h2>Create Stripe Payments</h2>
		<div class="form-group">
			<label class="control-label col-sm-2" for="amount">Amount:</label>
			<div class="col-sm-6">
				<input class="form-control" type="number" name="amount" id="amount" />
			</div>
		</div>
		<div class="form-group">
			<label class="control-label col-sm-2" for="currency">Currency: </label>
			<div class="col-sm-6">
				<input class="form-control" type="text" name="currency" id="currency" />
			</div>
		</div>
		<div class="form-group">
			<label class="control-label col-sm-2" for="cardnumber">Card number: </label>
			<div class="col-sm-6">
				<input class="form-control card-number" type="text"name="customerid" id="cardnumber" />
			</div>
		</div>
		<div class="form-group">
			<label class="control-label col-sm-2" for="cvc">CVC: </label>
			<div class="col-sm-6">
				<input class="form-control card-cvc" type="number" name="cvc" id="cvc" />
			</div>
		</div>
		<div class="form-group">
			<label class="control-label col-sm-2" for="card-expiry-month">Expired Month: </label>
			<div class="col-sm-6">
				<input class="form-control card-expiry-month" type="number" name="card-expiry-month" id="card-expiry-month" />
				<input class="form-control user-name" type="hidden" name="user_name" id="user-name" value="<%=name%>" />
			</div>
		</div>
		<div class="form-group">
			<label class="control-label col-sm-2" for="card-expiry-year">Expired Year: </label>
			<div class="col-sm-6">
				<input class="form-control card-expiry-year" type="number" name="card-expiry-year" id="card-expiry-year" class="card-expiry-year" />
			</div>
		</div>
		
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-6">
				<input class="btn btn-default submittransaction" type="button" id="submittransaction" value="Submit">
			</div>
		</div>
	</form>
</div>
